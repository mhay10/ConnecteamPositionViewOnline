{
  "manifest_version": 2,
  "name": "Connecteam Position View",
  "version": "1.0",
  "description": "Adds position view button and popup. Now fully rendered in the browser.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "cookies",
    "https://app.connecteam.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.connecteam.com/*"],
      "js": ["pageAction.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["popup/index.html"],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "connecteampositionviewonline@github.com"
    }
  },
  "browser_action": {
    "default_popup": "options.html"
  },
  "icons": {
    "32": "favicon.png"
  }
}
